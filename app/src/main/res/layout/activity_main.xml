<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:background="@drawable/bg_app_2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/back_tv_btn"
            android:layout_marginVertical="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:background="@drawable/options_holder_bg"
            android:orientation="vertical"
            android:weightSum="21"
            >
            <TextView
                android:id="@+id/map_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button_bg_4"
                android:layout_weight="3"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="MAP"
                android:gravity="center"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="22sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/rank_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button_bg_4"
                android:layout_weight="3"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="RANKINGS"
                android:gravity="center"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="22sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/add_question_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button_bg_4"
                android:layout_weight="3"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="ADD QUESTION"
                android:gravity="center"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="22sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/help_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button_bg_4"
                android:layout_weight="3"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="HELP"
                android:gravity="center"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="22sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/add_friends_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button_bg_4"
                android:layout_weight="3"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="ADD FRIENDS"
                android:gravity="center"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="22sp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/back_tv_btn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_33sdp"
            android:background="@drawable/button_bg_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Back"
            android:gravity="center"
            android:fontFamily="@font/segoe_ui_bold"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="#000000"
            android:textSize="22sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>