<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuestionActivity"
    android:background="@drawable/bg_app_2">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/question_holder_cv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/text_rect_bg"
        android:layout_marginVertical="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="20sp"
            android:fontFamily="@font/segoe_ui_bold"
            android:textColor="#000000"
            android:text="Pitanje 1:
                kad je sagradjena Niska tvrdjava?"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/question_holder_cv"
        app:layout_constraintEnd_toEndOf="@id/question_holder_cv"
        app:layout_constraintTop_toBottomOf="@id/question_holder_cv"
        app:layout_constraintBottom_toTopOf="@id/leave_btn_tv"
        android:orientation="vertical"
        android:weightSum="12">
        <TextView
            android:id="@+id/answer_1_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:background="@drawable/button_bg_3"
            android:layout_marginTop="@dimen/_15sdp"
            android:tag="1"
            />
        <TextView
            android:id="@+id/answer_2_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:background="@drawable/button_bg_3"
            android:layout_marginTop="@dimen/_15sdp"
            android:tag="2"
            />
        <TextView
            android:id="@+id/answer_3_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:background="@drawable/button_bg_3"
            android:layout_marginTop="@dimen/_15sdp"
            android:tag="3"
            />
        <TextView
            android:id="@+id/answer_4_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:background="@drawable/button_bg_3"
            android:layout_marginTop="@dimen/_15sdp"
            android:tag="4"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/leave_btn_tv"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_33sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/button_bg_3"
        android:text="Leave"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/segoe_ui_bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>