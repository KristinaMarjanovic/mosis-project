<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app_1"
        tools:context=".activities.LoadingActivity">

        <ImageView
            android:id="@+id/app_name_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/app_name_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center"
            android:text="CITY QUEST"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/app_name_bg"
            app:layout_constraintEnd_toEndOf="@id/app_name_bg"
            app:layout_constraintStart_toStartOf="@id/app_name_bg"
            app:layout_constraintTop_toTopOf="@id/app_name_bg" />

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            app:indicatorColor="#E9A442"
            app:indicatorName="BallSpinFadeLoaderIndicator"
            app:layout_constraintBottom_toTopOf="@id/app_loading_bg"
            app:layout_constraintEnd_toEndOf="@id/app_loading_bg"
            app:layout_constraintStart_toStartOf="@id/app_loading_bg" />

        <ImageView
            android:id="@+id/app_loading_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_50sdp"
            android:src="@drawable/loading_text_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:gravity="center"
            android:text="LOADING..."
            android:textColor="#411313"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/app_loading_bg"
            app:layout_constraintEnd_toEndOf="@id/app_loading_bg"
            app:layout_constraintStart_toStartOf="@id/app_loading_bg"
            app:layout_constraintTop_toTopOf="@id/app_loading_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>