<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddQuestionActivity"
        android:background="@drawable/bg_app_1">
        <TextView
            android:id="@+id/question_text_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="#E7E0E0"
            android:fontFamily="@font/segoe_ui"
            android:text="Tekst pitanja:"
            android:layout_margin="@dimen/_15sdp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/question_holder_cv"
            android:layout_width="0dp"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintTop_toBottomOf="@id/question_text_hint_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/text_rect_bg"
            android:layout_marginVertical="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            >
            <TextView
                android:id="@+id/add_question_text_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="20sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="#000000"
                android:text="Pitanje 1:
                Kada su Osmanlije zapocele gradnju Niske tvrdjave kakvu je danas znamo?"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/question_holder_cv"
            app:layout_constraintEnd_toEndOf="@id/question_holder_cv"
            app:layout_constraintTop_toBottomOf="@id/question_holder_cv"
            app:layout_constraintBottom_toTopOf="@id/back_tv_btn"
            android:orientation="vertical"
            android:weightSum="12">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_1_cv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:layout_marginTop="@dimen/_15sdp"

                >
                <EditText
                    android:id="@+id/answer_1_et"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/answer_1_check_iv"
                    android:background="@drawable/button_bg_3"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:tag="2"
                    android:textSize="20sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="#000000"
                    android:text="1617"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/answer_1_check_bg_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/icon_checkmark_holder"
                    android:tag="1"
                    />
                <ImageView
                    android:id="@+id/answer_1_check_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/icon_checkmark"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_2_cv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:layout_marginTop="@dimen/_15sdp"
                >
                <EditText
                    android:id="@+id/answer_2_et"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/answer_2_check_iv"
                    android:background="@drawable/button_bg_3"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="20sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="#000000"
                    android:text="1717"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/answer_2_check_bg_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/icon_checkmark_holder"
                    android:tag="2"
                    />
                <ImageView
                    android:id="@+id/answer_2_check_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/icon_checkmark"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_3_cv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:layout_marginTop="@dimen/_15sdp"
                >
                <EditText
                    android:id="@+id/answer_3_et"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/answer_3_check_iv"
                    android:background="@drawable/button_bg_3"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="20sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="#000000"
                    android:text="1719"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/answer_3_check_bg_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/icon_checkmark_holder"
                    android:tag="3"
                    />
                <ImageView
                    android:id="@+id/answer_3_check_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/icon_checkmark"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/answer_4_cv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:layout_marginTop="@dimen/_15sdp"
                >
                <EditText
                    android:id="@+id/answer_4_et"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/answer_4_check_iv"
                    android:background="@drawable/button_bg_3"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="20sp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:textColor="#000000"
                    android:text="1723"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/answer_4_check_bg_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/icon_checkmark_holder"
                    android:tag="4"
                    />
                <ImageView
                    android:id="@+id/answer_4_check_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/icon_checkmark"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/back_tv_btn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_33sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/save_tv_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/button_bg_2"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Back"
            />
        <TextView
            android:id="@+id/save_tv_btn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_33sdp"
            app:layout_constraintStart_toEndOf="@id/back_tv_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/button_bg_2"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Save"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>