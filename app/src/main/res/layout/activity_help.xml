<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HelpActivity"
    android:background="@drawable/bg_app_1">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/back_tv_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/help_text_bg"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/segoe_ui_bold"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/back_tv_btn"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/button_bg_3"
        android:text="Back"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/segoe_ui_bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>